{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    
    // Type Checking
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    
    // Interop
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    
    // Monorepo Path Mapping (FASE 1)
    "baseUrl": ".",
    "paths": {
      "@navigator.menu/core": ["packages/core/src/index.ts"],
      "@navigator.menu/types": ["packages/types/src/index.d.ts"],
      "@navigator.menu/pdk": ["packages/pdk/src/index.ts"],
      "@navigator.menu/plugin-cognitive": ["packages/plugin-cognitive/src/index.ts"],
      "@navigator.menu/plugin-dom-renderer": ["packages/plugin-dom-renderer/src/index.ts"],
      "@navigator.menu/plugin-keyboard": ["packages/plugin-keyboard/src/index.ts"],
      "@navigator.menu/plugin-logger": ["packages/plugin-logger/src/index.ts"],
      "@navigator.menu/react": ["packages/react/src/index.ts"]
    }
  }
}
