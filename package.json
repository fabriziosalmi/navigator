{
  "name": "@navigator.menu/monorepo",
  "version": "2.0.0",
  "description": "Navigator - Enterprise-grade SDK for gesture-controlled navigation. Modular, framework-agnostic, with cognitive intelligence.",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "pnpm --filter @navigator.menu/demo dev",
    "build": "pnpm -r --filter './packages/**' build",
    "build:all": "pnpm -r build",
    "test": "pnpm -r test",
    "test:ci": "pnpm -r run test:ci",
    "test:unit": "pnpm -r --filter './packages/**' test:unit",
    "test:e2e": "pnpm --filter @navigator.menu/demo test:e2e",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish",
    "docs:dev": "pnpm --filter documentation start",
    "docs:build": "pnpm --filter documentation build",
    "validate": "bash ./scripts/validate-ecosystem.sh",
    "validate:ci": "bash ./scripts/validate-ecosystem.sh --ci",
    "prepare": "husky"
  },
  "keywords": [
    "gesture-control",
    "mediapipe",
    "navigation",
    "sdk",
    "plugin-system",
    "cognitive-intelligence",
    "framework-agnostic"
  ],
  "author": "Navigator Team",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/fabriziosalmi/navigator.git"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@eslint/js": "^9.17.0",
    "@playwright/test": "^1.56.1",
    "@rollup/plugin-yaml": "^4.1.2",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@types/node": "^20.11.0",
    "eslint": "^9.17.0",
    "eslint-plugin-sonarjs": "^3.0.5",
    "husky": "^9.1.7",
    "prettier": "^3.2.4",
    "rollup-plugin-visualizer": "^6.0.5",
    "size-limit": "^11.2.0",
    "terser": "^5.36.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.46.3",
    "vite": "^5.4.10",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.2.0",
    "wait-on": "^7.2.0"
  },
  "pnpm": {
    "overrides": {
      "happy-dom": ">=20.0.2",
      "esbuild": ">=0.25.0"
    }
  },
  "size-limit": [
    {
      "path": "packages/core/dist/index.js",
      "limit": "15 KB"
    },
    {
      "path": "packages/react/dist/index.js",
      "limit": "12 KB"
    },
    {
      "path": "packages/plugin-keyboard/dist/index.js",
      "limit": "3.5 KB"
    }
  ]
}
